<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/category_selected"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/bottom_sheet_playBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_editbar_play"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_addPlayListBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="듣기"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_playBtn"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_playBtn"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_playBtn" />

    <ImageView
        android:id="@+id/bottom_sheet_addPlayListBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_editbar_addplaylist"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_myListBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_playBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재생목록"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_addPlayListBtn"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_addPlayListBtn"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_addPlayListBtn" />

    <ImageView
        android:id="@+id/bottom_sheet_myListBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_editbar_mylist"
        app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_deleteBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_addPlayListBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 리스트"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_myListBtn"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_myListBtn"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_myListBtn" />

    <ImageView
        android:id="@+id/bottom_sheet_deleteBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_editbar_delete"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_myListBtn"
        app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="삭제하기"
       android:textColor="@color/white"
       app:layout_constraintTop_toBottomOf="@id/bottom_sheet_deleteBtn"
       app:layout_constraintEnd_toEndOf="@id/bottom_sheet_deleteBtn"
       app:layout_constraintStart_toStartOf="@id/bottom_sheet_deleteBtn"
       />

</androidx.constraintlayout.widget.ConstraintLayout>